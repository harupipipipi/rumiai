{
  "type": "prompt_pack",
  "id": "prompt_v1",
  "version": "1.0.0",
  "display_name": "Prompt Pack",
  "description": "プロンプトテンプレートシステム。動的読み込み、専用仮想環境、設定スキーマをサポートします。",
  "entry": {
    "backend": "python:prompt_loader",
    "frontend": null
  },
  "connectivity": {
    "accepts": [],
    "provides": [
      "system_prompt",
      "prompt_template"
    ],
    "requires": []
  },
  "storage": {
    "uses_mounts": [
      "data.settings"
    ],
    "layout": "component_defined"
  },
  "addon_policy": {
    "allowed_manifest_paths": [
      "/extensions"
    ],
    "editable_files": [
      {
        "path_glob": "prompt/*/config.json",
        "allowed_json_pointer_prefixes": [
          "/"
        ]
      }
    ],
    "deny_all": false
  },
  "extensions": {},
  "metadata": {
    "default_prompt": "normal_prompt"
  }
}
