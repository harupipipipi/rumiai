{
  "handler_id": "builtin.store.list",
  "permission_id": "store.list",
  "entrypoint": "handler.py:execute",
  "description": "List keys in a Store with optional pagination. Supports prefix filtering, cursor-based pagination, and configurable page size.",
  "risk": "low",
  "input_schema": {
    "type": "object",
    "required": ["store_id"],
    "properties": {
      "store_id": {"type": "string"},
      "prefix": {"type": "string", "description": "Optional key prefix filter"},
      "limit": {"type": "integer", "description": "Page size (1-1000, default 100). Omit for all keys."},
      "cursor": {"type": "string", "description": "Pagination cursor from previous response (base64)"}
    }
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "success": {"type": "boolean"},
      "keys": {"type": "array", "items": {"type": "string"}},
      "next_cursor": {"type": ["string", "null"], "description": "Cursor for next page (null if no more)"},
      "has_more": {"type": "boolean"},
      "total_estimate": {"type": "integer", "description": "Estimated total matching keys"},
      "error": {"type": "string"},
      "error_type": {"type": "string"}
    }
  }
}
